            <!-- 旋转图片 -->
            <Button
                android:id="@+id/btnRotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旋转" />

            <!-- 半调网屏 -->
            <Button
                android:id="@+id/btnHalftone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="半调网屏" />

            <!-- 裁剪图片 -->
            <Button
                android:id="@+id/btnCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="裁剪" />

            <!-- 生成G代码 -->
            <Button
                android:id="@+id/GCodeGen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生成G代码" />

            <!-- 读取预制文件 -->
            <Button
            android:id="@+id/readGCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取预置文件" />

            <!-- 读取预制文件 -->
            <Button
                android:id="@+id/graffiti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="涂鸦" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>